{
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2015,
    "import/extensions": "off",
    "import/no-unresolved": "off"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "no-global-assign": [
      "error",
      {
        "exceptions": ["Object"]
      }
    ]
  }
}
